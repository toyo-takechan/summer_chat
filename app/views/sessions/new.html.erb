<%= provide(:title, " login") %>
<div class="wrapper">
  <%= render "layouts/aside" %>
  <div class= "wrapper_main form" %>
    <h1>Summer Appへようこそ</h1>
    <h2>ログイン</h2>
  <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
    <%# <%= render 'shared/error_messages' %>

    <%= f.label :email, class:"form_label" %>
    <%= f.email_field :email, class:"form_controll" %>

    <%= f.label :password, class:"form_label" %>
    <%= f.password_field :password, class:"form_controll" %>

    <%= f.label :remember_me, class: "#"  do %>
      <%= f.check_box :remember_me %>
      <span>ログイン状態を保持する。</span><br>
    <% end %>

    <%= f.submit"ログイン", class:"form_btn" %>
  <% end %>
  <p>新しいユーザーですか? <%= link_to "新規登録", new_user_path %></p>

  </div>
</div>
